<div id="map-outer">
    <div class="jumbotron">
        <h1 class="display-4">XML to Map</h1>
        <p class="lead">Generate a map using Google Maps API from a XML document containing coordinates (lat/long) for Iris' offices around the UK.</p>
        <p class="lead">
            <button class="btn btn-outline-primary btn-lg" v-on:click="drawMap">Draw Map</button>
        </p>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div id="map"></div>
        </div>
        <div class="col-md-6">
            <div v-if="startedMap && !finishedMap">
                <span class="badge badge-warning">Started</span>
            </div>
            <div v-else>
                <div v-if="!startedMap && finishedMap">
                    <span class="badge badge-success">Finished</span>

                    <div v-if="recordCount > 0">
                        <h3>Total records processed: {{ recordCount }}</h3>

                        <button class="btn btn-outline-info btn-lg" data-toggle="collapse" data-target="#demo">Data Imported</button>
                        <div id="demo" class="collapse" v-for="item in list">
                            <li v-for="rec in item">{{ rec }}</li>
                        </div>
                    </div>
                    <div v-else>
                        <h3>No records processed</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>